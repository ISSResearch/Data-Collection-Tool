{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "paths": {
      "axios": ["./node_modules/axios"],
      "react": ["./node_modules/react"],
      "react-dom": ["./node_modules/react-dom"],
      "react-router-dom": ["./node_modules/react-router-dom"]
    }
  },
  "exclude": ["**/*.test.js"],
  "include": ["./src"]
}
